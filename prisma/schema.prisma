generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Dynasty {
  战国时期
  东汉末年
  唐
  宋
  元
  明
  清
}

model Author {
  id      String  @id @default(cuid())
  name    String
  dynasty Dynasty

  birthDate DateTime?
  deathDate DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  poems     Poem[]

  @@index([name, dynasty])
  @@map("authors")
}

model Poem {
  id         String   @id @default(cuid())
  title      String
  section    String?
  paragraphs String[]

  authorId String
  author   Author @relation(fields: [authorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([title])
  @@map("poems")
}
